{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "react", "plugin:prettier/recommended"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "jsx-quotes": [2, "prefer-single"],
    "semi": ["error", "never"],
    "quotes": [2, "single"],
    "indent": ["error", 2]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
